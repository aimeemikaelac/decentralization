<h1>Listing Register Machine Types</h1>

<%= link_to 'New machine type', new_type_path %>

<table>
	<tr>
		<th>Name</th>
	</tr>

	<% @types.each do |type| %>
		<tr>
			<td><%= type.name %></td>
			<td><%= link_to 'Show', type_path(type) %></td>
			<td><%= link_to 'Edit', edit_type_path(type) %></td>
			<td><%= link_to 'Destroy', type_path(type), 
				method: :delete, 
				data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
